@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;

@if (HttpContextAccessor.HttpContext.User.Identity.IsAuthenticated)
{
    <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
        <ul class="navbar-nav ml-auto">
            @if (HttpContextAccessor.HttpContext.User.Identity.IsAuthenticated)
            {
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-page="/Dashboard/Main" >Dashboard</a>
                </li>
                <li class="nav-item">
                <li class="nav-item dropdown">
                    <a class="nav-link nav-link-icon" href="#" id="navbar-success_dropdown_1" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        @HttpContextAccessor.HttpContext.User.Identity.Name
                        <i class="material-icons">account_circle</i>
                        <span class="nav-link-inner--text d-lg-none setting">circle-08</span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbar-success_dropdown_1">
                        @*<a class="dropdown-item" asp-page="/ProfilePage">Profile</a>*@
                        @*<a class="dropdown-item" href="#">Logout</a>*@
                        <button type="submit" class="dropdown-item">Log out</button>
                        <div class="dropdown-divider"></div>
                        @*<a class="dropdown-item" asp-page="/HelpPage">Help</a>*@
                    </div>
                </li>
                <li>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="text" class="form-control datetimepicker" id="datetime" style="color: white;padding: 0px;" />
                            </div>
                        </div>
                    </div>
                </li>
                </li>
            }
        </ul>
    </form>
}
else
{
    <ul class="navbar-nav ml-auto">
        <li class="nav-item"><a asp-page="/Account/Login">Log in</a></li>
    </ul>
}
